FROM node:lts
ARG MONGODB_URL
ARG PORT
ENV PORT=${PORT}
ENV MONGODB_URL=${MONGODB_URL}
COPY /app/service1/package.json /app/service1/package.json
COPY /app/service1/package-lock.json /app/service1/package-lock.json
WORKDIR /app/service1/
COPY . .
RUN npm install

COPY . .

EXPOSE 3000

CMD [ "npm", "start" ]

